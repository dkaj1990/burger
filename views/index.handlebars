{{!-- Setup the index.handlebars to have the template that Handlebars can render onto.

Create a button in index.handlebars that will submit the user input into the database. --}}

<div class= "container mt-4">
    <div class="jumbotron">
        <h1 class="text-center">
            The Burger App
        </h1>
        <hr>
    </div>
    <div class = "row">
        <div class="col-sm-6 mt-4 devour">
            <h2>Try these burgers</h2>
             <div class="card-body">
                    <ul>
                        {{#each burgers}}
                            {{#unless this.devoured}}
                        <li>
                           
                            {{this.id}}
                            {{this.burger_name}}
                            <form action="burgers/update/{{this.id}}?_method=PUT" method"POST">
                            <input type="hidden" name="devoured" value="false">
                            <button data-id="{{id}}" data-newdevour ="{{devoured}}"  class="devburger btn">Devour!</button> 
                            </form> 
                        </li>
                            
                            {{/unless}}
                        {{/each}}
                    </ul>
             </div>

        </div>
        <div class="col-sm-6 mt-4 devoured">
             <h2>Devoured!</h2>
            <div class="card-body">
                 <ul>
                    {{#each burgers}}

                    <p>
                        {{#if devoured}}
                        {{this.id}}
                        {{this.burger_name}}
                    </p>
                    {{/if}}
                    {{/each}}
                </ul>
             </div>

        </div>
    </div>
    <div class = "row mt-2">
        <div class="col-sm-12">
            <form class="submit-burgers">

                <div class="form-group">
                <label for="text-input"> Your Favorite</label>
                <input type="text"  id="bu" name="burger">
                </div>
                <button type="submit" class="btn " id="add-burger">Add your own burger</button>
            </form>
        </div>
    </div>
</div>